<match debug.**>
  type stdout
</match>

<source>
  type forward
</source>

<source>
  type http
  port 8888
</source>

<source>
  type debug_agent
  bind 127.0.0.1
  port 24230
</source>

<source>
  type tail
  path /var/log/nginx/access.log
  pos_file /var/log/td-agent/httpd-access.log.pos
  tag nginx.access
  format nginx
</source>

<source>
  type tail
  path /var/log/nginx/error.log
  pos_file /var/log/td-agent/httpd-error.log.pos
  tag nginx.error
  format nginx
</source>

<match nginx.**>
  type record_modifier
  hostname ${hostname}
  tag log_with_hostname
</match>

<match log_with_hostname>
  type elasticsearch
  logstash_format true
  flush_interval 60s
</match>

<match **>
  type elasticsearch
  logstash_format true
</match>
